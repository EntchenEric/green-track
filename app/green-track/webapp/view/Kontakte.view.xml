                            </VBox>
                            <ObjectStatus text="Im Stau" state="Error" icon="sap-icon://shipping-status" inverted="true"/>
                            <HBox justifyContent="End"><Button icon="sap-icon://map" type="Transparent"/></HBox>
                        </cells>
                    </ColumnListItem>

                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <Avatar initials="MK" backgroundColor="Accent8" displaySize="XS"/>
