<mvc:View
    controllerName="greentrack.controller.Kontakte"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true">

    <Page 
        showNavButton="true" 
        navButtonPress="onNavBack" 
        title="Mitarbeiter-Verzeichnis"
        backgroundDesign="List">

        <content>
            <Table inset="false" sticky="ColumnHeaders" class="sapUiSmallMarginTop" growing="true" growingThreshold="20">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="Gesamtes Team (58)" level="H2"/>
                        <ToolbarSpacer/>
                        <SearchField width="25%" placeholder="Namen suchen..."/>
                        <Button icon="sap-icon://sort" tooltip="Sortieren"/>
                        <Button icon="sap-icon://filter" tooltip="Filtern"/>
                    </OverflowToolbar>
                </headerToolbar>
                
                <columns>
                    <Column width="4rem" hAlign="Center"><Text text=""/></Column>
                    <Column width="30%"><Text text="Name &amp; Position"/></Column>
                    <Column width="25%" minScreenWidth="Tablet" demandPopin="true"><Text text="Einsatzort / Fahrzeug"/></Column>
                    <Column width="20%" hAlign="Center" minScreenWidth="Tablet" demandPopin="true"><Text text="Aktueller Status"/></Column>
                    <Column width="10%" hAlign="End"><Text text=""/></Column>
                </columns>

                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <Avatar initials="TM" backgroundColor="Accent1" displaySize="XS"/>
                            <ObjectIdentifier title="Thomas Müller" text="Senior Fahrer"/>
                            <VBox>
                                <ObjectStatus text="E-Sprinter" icon="sap-icon://electric-vehicle" state="None"/>
                                <Text text="ID: 8821" class="sapUiTinyMarginTop"/>
                            </VBox>
                            <ObjectStatus text="Verfügbar" state="Success" icon="sap-icon://circle-task-2" inverted="true"/>
                            <HBox justifyContent="End"><Button icon="sap-icon://call" type="Transparent"/></HBox>
                        </cells>
                    </ColumnListItem>

                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <Avatar initials="AS" backgroundColor="Accent5" displaySize="XS"/>
                            <ObjectIdentifier title="Anna Schmidt" text="Leitung Disposition"/>
                            <VBox>
                                <ObjectStatus text="Zentrale Berlin" icon="sap-icon://map-2" state="None"/>
                                <Text text="Etage 3" class="sapUiTinyMarginTop"/>
                            </VBox>
                            <ObjectStatus text="Im Meeting" state="Warning" icon="sap-icon://circle-task-2" inverted="true"/>
                            <HBox justifyContent="End"><Button icon="sap-icon://email" type="Transparent"/></HBox>
                        </cells>
                    </ColumnListItem>

                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <Avatar initials="LW" backgroundColor="Accent2" displaySize="XS"/>
