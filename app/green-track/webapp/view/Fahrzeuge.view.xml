<mvc:View
    controllerName="greentrack.controller.Fahrzeuge"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards">

    <Page title="Vehicle Fleet Management">
        <headerContent>
            <Button text="Go to GreenTrack" press="onNavToGreenTrack" />
        </headerContent>

        <subHeader>
            <Toolbar>
                <SearchField id="searchField" placeholder="Search vehicles..." search="onSearch" width="100%"/>
                <ToolbarSpacer />
                <Button icon="sap-icon://filter" text="Filter" press="onFilterPress" />
            </Toolbar>
        </subHeader>

        <FlexBox wrap="Wrap" items="{/Vehicles}">

            <f:Card width="375px" class="sapUiSmallMargin">
                <f:header>
                    <card:Header 
                        title="{licensePlate} - {vehicleType}" 
                        subtitle="{subtitle}" />
                </f:header>
                <f:content>
                    <List showSeparators="None" class="sapUiSmallMargin" >
                        <CustomListItem>
                            <HBox alignItems="Center" justifyContent="SpaceBetween">
                                <VBox>
                                    <Title level="H3" text="{vehicleType}" />
                                    <Text text="Tonnage: {tonnage}" />
                                    <Text text="Fuel Type: {fuelType}" />
                                    <Text text="Emissions (Full): {emissions}" />
                                    <Text text="Certificates: {certificates}" />
                                </VBox>
                                <ObjectStatus text="{status}" state="{statusState}" />
                            </HBox>
                        </CustomListItem>
                    </List>
                </f:content>
            </f:Card>
            
        </FlexBox>

    </Page>
</mvc:View>