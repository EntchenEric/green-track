    xmlns:card="sap.f.cards">

    <Page title="Vehicle Fleet Management">
        <headerContent>
            <Button text="Go to GreenTrack" press="onNavToGreenTrack" />
        </headerContent>

        <subHeader>
            <Toolbar>
                <SearchField id="searchField" placeholder="Search vehicles..." search="onSearch" width="100%"/>
                <ToolbarSpacer />
                <Button icon="sap-icon://filter" text="Filter" press="onFilterPress" />
            </Toolbar>
        </subHeader>

        <FlexBox wrap="Wrap">

            <f:Card width="375px" class="sapUiSmallMargin">
        <f:header>
            <card:Header title="VH-001 - Electric Van" subtitle="Battery Van" />
        </f:header>
        <f:content>
            <List showSeparators="None" class="sapUiSmallMargin" >
                <CustomListItem>
                    <HBox alignItems="Center" justifyContent="SpaceBetween">
                        <VBox>
                            <Title level="H3" text="Electric Van" />
                            <Text text="Tonnage: 3.5 t" />
                            <Text text="Fuel Type: Electric" />
                            <Text text="Emissions (Full): 0 kg CO₂" />
                            <Text text="Certificates: 2" />
                        </VBox>
                        <ObjectStatus text="active" state="Success" />
                    </HBox>
                </CustomListItem>
            </List>
        </f:content>
    </f:Card>

